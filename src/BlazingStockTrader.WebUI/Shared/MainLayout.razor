@inherits LayoutComponentBase

<PageTitle>BlazingStockTrader</PageTitle>

<MudThemeProvider Theme="_myTheme" IsDarkMode="false" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />        
        <MudLink Href="https://www.huanlintalk.com/" Target="_blank" Color="Color.Inherit">作者網站</MudLink>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/huanlin/blazing-stock-trader" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Blazing Stock Trader</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Fxied="true">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    private MudTheme _myTheme = new MudTheme()
        {
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "微軟正黑體", "新細明體", "Helvetica", "Arial", "sans-serif" },
                    FontSize = "16px",
                }
            },
            Palette = new Palette()
            {
                AppbarBackground = "#1976D2",
                AppbarText = "#FFFFFF",
                Primary = "#1E1E1E",
                PrimaryDarken = "#455A64",
                PrimaryLighten = "#CFD8DC",
                TextPrimary = "#212121",
                TextSecondary = "#757575",
                Divider = "#BDBDBD",
                DrawerText = "#000000"
            },
            PaletteDark = new PaletteDark()
            {
                Primary = Colors.Blue.Darken4
            }
        };

    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
