@inherits LayoutComponentBase

<PageTitle>BlazingStockTrader</PageTitle>

<MudThemeProvider Theme="_myTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        BlazorApp1
    </MudAppBar>
    <MudDrawer Open="true">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer Fxied="true">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code
{
    private MudTheme _myTheme = new MudTheme()
        {
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "微軟正黑體", "新細明體", "Helvetica", "Arial", "sans-serif" }
                }
            },
            Palette = new Palette()
            {
                AppbarBackground = "#1976D2",
                AppbarText = "#FFFFFF",
                Primary = "#607D8B",
                PrimaryDarken = "#455A64",
                PrimaryLighten = "#CFD8DC",
                TextPrimary = "#212121",
                TextSecondary = "#757575",
                Divider = "#BDBDBD"

            },
            PaletteDark = new PaletteDark()
            {
                Primary = Colors.Blue.Darken4
            }
        };
}
